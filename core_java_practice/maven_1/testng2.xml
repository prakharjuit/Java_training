<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">

<suite name="Ecommerce Suite">
 
          <test name="Smoke + Regression Tests">
        <groups>
        <define name="all">
                        <include name="smoke"/>
                   <include name="regression"/>
                   <include name="sanity"></include>
        </define>
            <run>

                <include name="all"></include>
                <exclude name="regression"></exclude>
            </run>
        </groups>
        
        <classes>
            <class name="Test_ng_2.EcommerceTests">
                <methods>
                    <!-- Explicitly include setup method -->
                    <include name="goHome"/>
                    <!-- Also include all smoke tests -->
                    <include name=".*"/>
                    
                </methods>
            </class>
        </classes>
    </test>
 
 
</suite>
